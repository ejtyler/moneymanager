<%= form_with(model: subscription, local: true) do |form| %>
  <% if subscription.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>

      <ul>
      <% subscription.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" id="title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field" id="type">
    <%= form.label :type %>
    <span id="fixed-amount">
      <%= form.radio_button :type, 'fixed', :checked => true %>
      <%= label :type_fixed, 'Fixed Amount', :value => 'fixed', :style => "display: inline-block;" %>
    </span>
    <br>
    <span id="variable-amount">
      <%= form.radio_button :type, 'variable' %>
      <%= label :type_variable, 'Variable Amount', :value => 'variable', :style => "display: inline-block;" %>
    </span>
  </div>

  <div class="field" id="frequency">
    <%= form.label :frequency %>
    <%= form.select :frequnecy, Subscription.frequencies %>
  </div>

  <div class="field" id="statement-date">
    <%= form.label :statement_date %>
    <%= form.date_select :statement_date %>
  </div>

  <div class="field" id="due-date">
    <%= form.label :due_date %>
    <%= form.date_select :due_date %>
  </div>

  <div class="field">
    <%= form.label :amount %>
    <%= form.text_field :amount %>
  </div>

  <div class="actions">
    <%= form.submit %>
    <%= link_to :back do %>
      <button value="Cancel">Cancel</button>
    <% end %>
  </div>
<% end %>
